<?php
/** @var Mirasvit\GdprCookie\Block\CookieGroupBlock $block */
/** @var \Hyva\Theme\Model\ViewModelRegistry $viewModels */
/** @var \Hyva\Theme\ViewModel\HeroiconsOutline $heroicons */
/** @var \Magento\Framework\Escaper $escaper */
$heroicons = $viewModels->require(\Hyva\Theme\ViewModel\HeroiconsOutline::class);

$group   = $block->getCookieGroup();
$groupId = $group->getId();

$disabled = $group->isRequired() ? 'disabled' : '';
$checked  = !$group->isRequired() && !$block->getOptionalGroupsChecked() ? '' : 'checked';
?>
<div class="cookie-group-container cookie-group-container-<?= $groupId; ?> border border-gray-300 mt-4 p-3 rounded-2xl shadow-sm"
     x-data="{open<?= $groupId; ?>: false}">
    <div class="flex flex justify-between">
        <h4 class="title text-lg cursor-pointer"
            x-on:click="open<?= $groupId; ?> = !open<?= $groupId; ?>">
            <span x-show="! open<?= $groupId; ?>"><?= $heroicons->chevronUpHtml('h-6 inline mr-2 w-6', 4, 4); ?></span>
            <span x-show="open<?= $groupId; ?>" style="display: none"><?= $heroicons->chevronDownHtml('h-6 inline mr-2 w-6', 4, 4); ?></span>
            <?= $escaper->escapeHtml(__($group->getName())); ?>
        </h4>

        <input class="checkbox disabled:opacity-40" type="checkbox" value="1" <?= $disabled; ?> checked data-group-id="<?= $groupId; ?>" name="allowed-group-<?= $groupId; ?>">
    </div>

    <div class="content mt-4 pl-5" x-show.transition.origin.top="open<?= $groupId; ?>" style="display: none">
        <div>
            <?= $escaper->escapeHtml(__($group->getDescription())); ?>
        </div>
        <div class="cookie-list">
            <table>
                <tr>
                    <th class="p-2"><?= __('Name') ?></th>
                    <th class="p-2"><?= __('Description') ?></th>
                    <th class="p-2"><?= __('Lifetime') ?></th>
                </tr>
                <?php foreach ($block->getCookies() as $cookie): ?>
                    <tr>
                        <td class="p-2"><?= $escaper->escapeHtml($cookie->getName()) ?></td>
                        <td class="p-2"><?= $escaper->escapeHtml($cookie->getDescription()) ?></td>
                        <td class="p-2"><?= $block->humanReadableLifetime($cookie->getLifetime()) ?></td>
                    </tr>
                <?php endforeach ?>
            </table>
        </div>
    </div>

</div>
